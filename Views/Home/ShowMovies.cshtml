@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<AddMovieModel>

<div>
    <h3>Here is a List of all your Movies Added:</h3>

    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th><th></th>
        </thead>

        <tbody>
                @foreach (AddMovieModel x in Model)
                {                    
                    <tr>
                        @*<td>
                            <form asp-page-handler="Edit" method="post">
                                <input type="hidden" name="movieId"
                                       value="@x.movieId" />
                                <button type="submit">Edit</button>
                            </form>
                        </td>*@
                        <td class="text-left">@x.category</td>
                        <td class="text-center">@x.title</td>
                        <td class="text-center">@x.year</td>
                        <td class="text-center">@x.director</td>
                        <td class="text-center">@x.rating</td>
                        <td class="text-center">@x.edited</td>
                        <td class="text-center">@x.lent</td>
                        <td class="text-left">@x.notes</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = x.movieId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = x.movieId})

                            @*<form asp-page-handler="Remove" method="post">
                                <input type="hidden" name="movieId"
                                       value="@x.movieId" />
                                <button type="submit">Delete</button>
                            </form>*@
                        </td>
                    </tr>                    
                }
        </tbody>
    </table>
</div>
