@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<AddMovieModel>


<div>
    <h3>Here is a List of all your Movies Added:</h3>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To:</th><th>Notes</th>
        </thead>

        <tbody>
                @foreach (CadenAssignment3FilmCollection.Models.AddMovieModel x in Model)
                {                    
                    <tr>
                        <td>@x.category</td>
                        <td>@x.title</td>
                        <td>@x.year</td>
                        <td>@x.director</td>
                        <td>@x.rating</td>
                        <td>@x.edited</td>
                        <td>@x.lent</td>
                        <td>@x.notes</td>
                    </tr>                    
                }
        </tbody>
    </table>
</div>
