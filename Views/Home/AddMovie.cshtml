@{
    ViewBag.Title = "Movie Entry";
}

@model AddMovieModel

<body>
    <div class="form-group movieEntry">
        <h2>Add a Movie</h2>
        <form asp-action="AddMovie" method="post">            
            <div>
                <label asp-for="category">Category</label>
                <input class="form-control" id="category" asp-for="category" />
            </div>

            <br />
            <div>
                <label asp-for="title">Title</label>
                <input class="form-control" id="title" asp-for="title" />
            </div>

            <br />
            <div>
                <label asp-for="year">Year</label>
                <input class="form-control" id="year" asp-for="year" />
            </div>

            <br />
            <div>
                <label asp-for="director">Director</label>
                <input class="form-control" id="director" asp-for="director" />
            </div>

            <br />
            <div>
                <label asp-for="rating">Rating</label>
                <select class="form-control" name="rating" id="rating" asp-for="rating">
                    <option value="">Select One</option>
                    <option value="g">G</option>
                    <option value="pg">PG</option>
                    <option value="pg13">PG-13</option>
                    <option value="r">R</option>
                </select>
            </div>

            <br />
            <div>
                <label asp-for="edited">Edited</label>
                <select class="form-control" name="edited" id="edited" asp-for="edited">
                    <option value="">Select One</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>

            <br />
            <div>
                <label asp-for="lent">Lent To</label>
                <input class="form-control" id="lent" asp-for="lent" />
            </div>

            <br />
            <div>
                <label asp-for="notes">Notes</label>
                <input class="form-control" id="notes" asp-for="notes" />
                <br />
            </div>

            <br />
            <input type="submit" class="btn btn-dark" value="Add Movie" id="addButton" />
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</body>